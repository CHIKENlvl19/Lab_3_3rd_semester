  - buckets: ChainNode**
  - size: int
  - capacity: int
  - loadFactor: double
  - a, b, p: int
  
  + HashTableChains(initialCapacity: int)
  + ~HashTableChains()
  + Size(): int
  + Capacity(): int
  + LoadFactor(): double
  + Insert(key: int, value: int): void
  + Get(key: int): int
  + Remove(key: int): void
  + Contains(key: int): bool
  + Clear(): void
  + Print(): void
  + SaveText(filename: string): void
  + LoadText(filename: string): void
  + SaveBinary(filename: string): void
  + LoadBinary(filename: string): void
  - hash(key: int): int
  - resize(): void
}

